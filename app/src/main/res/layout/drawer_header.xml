<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:orientation="vertical"
        android:scaleType="fitCenter"
        android:background="@color/drawer_background"/>

    <com.demo.alexandr.myapp.utils.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/header_image_width"
        android:layout_height="@dimen/header_image_height"
        android:src="@drawable/user_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/header_image_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alex Marikutsa, Cherkasy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/header_text_margin_top"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/user_icon" />

</RelativeLayout>